@model TheBloodyInn.Application.Common.Commands.Users.Authentication.Signup.SignUpUserCommand
@{
    ViewData["Title"] = "SignUp";
}


<div class="row">
    <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="d-flex">
            <img class="mx-auto" src="~/assets/images/Zombies-bro.png" width="300" height="300" />
        </div>
        <h3 class="fw-bold text-center">A new InnkEepeR!</h3>
        <form action="/User/Signup" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label for="Email">Email</label>
                <input id="Email" class="form-control" name="Email" type="email" maxlength="50" />
            </div>
            <div class="mb-3">
                <label for="Password">Password</label>
                <input id="Password" class="form-control" name="Password" type="password" maxlength="50" />
            </div>
            <div class="d-grid mt-5">
                <button id="signup-btn" class="btn btn-primary" type="submit">Register</button>
            </div>
        </form>
    </div>
</div>