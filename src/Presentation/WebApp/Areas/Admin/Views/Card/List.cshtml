@using TheBloodyInn.Domain.Enum.Guests;
@using TheBloodyInn.Framework.Utilities.Cards;
@model List<TheBloodyInn.Domain.Entities.Guests.GuestEntity>
@{
    ViewData["Title"] = "List";
}

<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var guestCard in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <div class="@CardHelper.GetTextColorClassByCategory(guestCard.Category)">
                                <i class="@CardHelper.GetIconClassByCategory(guestCard.Category)"></i>
                            </div>
                            <div>
                                <h5>@(CardHelper.GetNameBySystemName(guestCard.SystemName)) </h5>
                            </div>
                            <div class="@CardHelper.GetTextColorClassByCategory(guestCard.Category)">
                                <i class="@CardHelper.GetIconClassByCategory(guestCard.Category)"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-body @CardHelper.GetBgColorClassByCategory(guestCard.Category) " style="min-height: 50px;">
                    </div>
                    <div class="card-footer">
                        @* Rank & Money *@
                        <div class="d-flex justify-content-around" style="margin-top: -20px;">
                            <span class="h4 fw-bold" style="margin-top: -15px;">@((int)guestCard.Rank)</span>
                            <span class="h6 fw-bold">@((int)guestCard.MoneyInPocket)</span>
                        </div>
                        <div class="d-flex justify-content-around small" style="min-height: 50px;">
                            <div class="d-flex flex-column justify-content-end col">
                                <div class="text-center fw-bold">@(CardHelper.GetNameByBuildItem(guestCard.BuildItem))</div>
                            </div>
                            <div class="col">
                                <p class="text-truncate" style="max-height:102px;"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>