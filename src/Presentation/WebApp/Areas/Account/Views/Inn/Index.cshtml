@{
    ViewData["Title"] = "My Inns";
}

<h1>My Inns</h1>
<div class="mb-3">
    <button class="btn btn-primary">New</button>
</div>
<div class="row">
    <div class="col-12 col-md-4 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <i class="far fa-hotel h3"></i>
                </div>
                <div class="d-flex gap-2">
                    <div>
                        <i class="far fa-users"></i>
                    </div>
                    <label>Innkeepers:</label>
                    <span>1</span>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-grid">
                    <button class="btn btn-primary">Start</button>
                </div>
            </div>
        </div>
    </div>
</div>