@{
    ViewData["Title"] = "My Inns";
}

<h1>My Inns</h1>
<div class="mb-3">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">New</button>
</div>
<div class="row">
    <div class="col-12 col-md-4 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <i class="far fa-hotel h3"></i>
                </div>
                <div class="d-flex gap-2">
                    <div>
                        <i class="far fa-users"></i>
                    </div>
                    <label>Innkeepers:</label>
                    <span>1</span>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-grid">
                    <button class="btn btn-primary">Start</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- New Inn Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Create new Inn</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label>Number of Innkeepers</label>
                    <select class="form-control">
                        <option value="1" selected>1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Short Mode
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>
